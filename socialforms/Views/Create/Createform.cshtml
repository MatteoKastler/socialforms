@model socialforms.Models.Question
@{
    ViewData["Title"] = "Create Form";
}

<h1>Create your own socialform</h1>

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Create your own socialform!</title>

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
    <div class="container" style="max-width: 700px;">

        <div class="text-center" style="margin: 20px 0px 20px 0px;">
            <a href="https://shouts.dev/" target="_blank"></a><br>
            <span class="text-secondary"></span>
        </div>

        <form method="post" action="">
            <div class="row">
                <div class="col-lg-12">
                    <div id="inputFormRow">
                        <div class="input-group mb-3">
                            <input type="text" name="title[]" class="form-control m-input" placeholder="Enter title" autocomplete="off">
                            <div class="input-group-append">
                                <button id="removeRow" type="button" class="btn btn-danger">Remove</button>
                            </div>
                        </div>
                    </div><br />

                    <div id="inputFormRow">
                        <div class="input-group mb-3">
                            <input type="text" name="title[]" class="form-control m-input" placeholder="Enter title" autocomplete="off"><br /><br />
                            <input type="checkbox" name="answer1" value="Cats"><input type="text" name="title[]" class="form-control m-input" placeholder="Enter title" autocomplete="off"><br/>
                            <input type="checkbox" name="answer2" value="Cats"><input type="text" name="title[]" class="form-control m-input" placeholder="Enter title" autocomplete="off"><br/>
                            <input type="checkbox" name="answer3" value="Cats"><input type="text" name="title[]" class="form-control m-input" placeholder="Enter title" autocomplete="off"><br/>
                            <div class="input-group-append">
                                <button id="removeRow" type="button" class="btn btn-danger">Remove</button>
                            </div>
                        </div>
                    </div><br />

                    <div id="inputFormRow">
                        <div class="input-group mb-3">
                            <div class="slidecontainer">
                                <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                            </div>
                        </div>
                    </div>



                    <div id="newTextField"></div>
                    <button id="addRow" type="button" class="btn btn-info">New Text-Question</button><br />

                    <div id="newMultipleChoice"></div><br />
                    <button id="multipleChoice" type="button" class="btn btn-info">New MultipleChoice-Question</button><br />

                    <div id="newSlider"></div><br />
                    <button id="slider" type="button" class="btn btn-info">New Slider</button><br />

                </div>
            </div>
        </form>
    </div>

    <script type="text/javascript">
        // add row
        $("#addRow").click(function () {
            var html = '';
            html += '<div id="inputFormRow">';
            html += '<div class="input-group mb-3">';
            html += '<input type="text" name="title[]" class="form-control m-input" placeholder="Enter title" autocomplete="off">';
            html += '<div class="input-group-append">';
            html += '<button id="removeRow" type="button" class="btn btn-danger">Remove</button>';
            html += '</div>';
            html += '</div>';

            $('#newTextField').append(html);
        });

        $("#multipleChoice").click(function () {
            var mc = '';
            mc += '<div id="inputFormRow">';
            mc += '<div class="input-group mb-3">';
            mc += '<input type="text" name="title[]" class="form-control m-input" placeholder="Enter title" autocomplete="off">';
            mc += '<input type="checkbox" name="favorite_pet" value="Cats"><input type="text" name="title[]" class="form-control m-input" placeholder="Enter title" autocomplete="off"><br>'
            mc += '<input type="checkbox" name="favorite_pet" value="Cats"><input type="text" name="title[]" class="form-control m-input" placeholder="Enter title" autocomplete="off"><br>'
            mc += '<input type="checkbox" name="favorite_pet" value="Cats"><input type="text" name="title[]" class="form-control m-input" placeholder="Enter title" autocomplete="off"><br>'
            mc += '<div class="input-group-append">';
            mc += '<button id="removeRow" type="button" class="btn btn-danger">Remove</button>';
            mc += '</div>';
            mc += '</div>';

            $('#newMultipleChoice').append(mc);
        })

        $("#slider").click(function () {
            var sl = '';
            sl += '<div id="inputFormRow">';
            sl += '<div class="input-group mb-3">';
            sl += '<div class="slidecontainer">';
            sl += '<input type="range" min="1" max="100" value="50" class="slider" id="myRange">';
            sl += '</div>';
            sl += '<button id="removeRow" type="button" class="btn btn-danger">Remove</button>';
            sl += '</div>';
            sl += '</div>';

            $('#newSlider').append(sl);
        })

      
        // remove row
        $(document).on('click', '#removeRow', function () {
            $(this).closest('#inputFormRow').remove();
        });

        var slider = document.getElementById("myRange");
        var output = document.getElementById("demo");
        output.innerHTML = slider.value; // Display the default slider value

        // Update the current slider value (each time you drag the slider handle)
        slider.oninput = function () {
            output.innerHTML = this.value;
        }

    </script>
</body>
</html>